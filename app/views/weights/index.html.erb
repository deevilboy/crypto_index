<h1> BTC/ETH/LTC Crypto Index (market cap weighted) </h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Index</th>
      <th>% Chg</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @index_date_price_hash.each do |id, sub_hash| %>
      <tr>
        <td><%= id %></td>
        <% sub_hash.each do |key, value| %>
        <td><%= number_with_precision(key, :precision => 0) %> </td>
        <td><%= number_to_percentage(value, precision:2) %> </td>
        <td><%#= link_to 'Show', weight %></td>
        <td><%#= link_to 'Edit', edit_weight_path(weight) %></td>
        <td><%#= link_to 'Destroy', weight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
        <% end %>
    <% end %>
  </tbody>
</table>

